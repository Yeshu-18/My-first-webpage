            const redb=document.getElementById("ToRed");
            const yellow=document.getElementById("ToYellow");
            const green=document.getElementById("ToGreen");

            redb.addEventListener("click",() => {
                document.body.style.background="red";
            });
            yellow.addEventListener("click", toyellow() => {
                document.body.style.backgroundColor="yellow";
            });
            green.addEventListener("click", togreen() => {
                document.body.style.backgroundColor="green";
            });




            <script>
    
            function tored(){
                document.body.style.background="red";
            }
            function toyellow(){
                document.body.style.background="yellow";
            }
            function togreen(){
                document.body.style.background="green";
            }
            document.getElementById("ToRed").addEventListener("click", tored());
            document.getElementById("ToYellow").addEventListener("click", toyellow());
            document.getElementById("ToGreen").addEventListener("click", tored());

        </script>